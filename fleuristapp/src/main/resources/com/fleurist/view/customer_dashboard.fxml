                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <Tab>
               <graphic>
                  <VBox alignment="CENTER">
                     <children>
                        <SVGPath content="M18 17H6v-2h12v2zm0-4H6v-2h12v2zm0-4H6V7h12v2zM3 22l1.5-1.5L6 22l1.5-1.5L9 22l1.5-1.5L12 22l1.5-1.5L15 22l1.5-1.5L18 22l1.5-1.5L21 22V2l-1.5 1.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2 4.5 3.5 3 2v20z" fill="#e53f7c" scaleX="1.3" scaleY="1.3" />
                        <Label text="Riwayat" textFill="#e53f7c" style="-fx-font-size: 10px; -fx-font-weight: bold;" />
                     </children>
                  </VBox>
               </graphic>
               <content>
                  <VBox spacing="15.0" style="-fx-background-color: #FFF0F5;">
                     <children>
                        <TableView fx:id="tableHistory" styleClass="customer-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colHistId" prefWidth="150.0" text="ID Transaksi" />
                              <TableColumn fx:id="colHistTanggal" prefWidth="200.0" text="Tanggal" />
                              <TableColumn fx:id="colHistTotal" prefWidth="150.0" text="Total Bayar" />
                              <TableColumn fx:id="colHistStatus" prefWidth="100.0" text="Status" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
